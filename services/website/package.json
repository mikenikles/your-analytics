{
  "name": "@your-analytics/website",
  "description": "The website for www.your-analytics.org",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "build": "run-s clean && npm run build:css && NODE_ENV=production svelte-kit build",
    "build:css": "NODE_ENV=production postcss src/tailwind.css -o static/tailwind.css",
    "clean": "rm -fr .svelte-kit",
    "cy:install": "cypress install",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "dev": "run-s clean && run-p watch:*",
    "start": "svelte-kit preview",
    "test": "run-p --race dev cy:run",
    "validate": "svelte-check --ignore **/world-map.svelte",
    "watch:css": "postcss src/tailwind.css -o static/tailwind.css -w",
    "watch:dev": "svelte-kit dev --host"
  },
  "dependencies": {
    "chart.js": "^3.7.0",
    "chartjs-chart-geo": "^3.6.0",
    "cookie": "^0.4.1",
    "cookie-parser": "^1.4.6",
    "date-fns": "^2.27.0",
    "jsonwebtoken": "^8.5.1",
    "magic-sdk": "^2.3.1"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^1.0.0-next.5",
    "@sveltejs/kit": "^1.0.0-next.203",
    "@testing-library/cypress": "^8.0.2",
    "@tsconfig/svelte": "^1.0.10",
    "@types/chart.js": "^2.9.24",
    "@types/node": "^14.11.2",
    "autoprefixer": "^10.4.0",
    "cssnano": "^5.0.14",
    "cypress": "^9.2.0",
    "node-fetch": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "postcss-preset-env": "^7.1.0",
    "svelte": "^3.44.3",
    "svelte-check": "^2.2.11",
    "svelte-preprocess": "^4.10.1",
    "tailwindcss": "^3.0.7",
    "tslib": "^2.0.1",
    "typescript": "^4.0.3",
    "xstate": "^4.13.0"
  }
}
